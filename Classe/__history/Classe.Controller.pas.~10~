unit Classe.Controller;

interface

uses
  System.Generics.Collections, System.Classes, Data.DB, Data.SqlExpr;

type
  TClasseController = class(TComponent)
  protected
    FQuery: TSQLQuery;
  public
    procedure Salvar; virtual; abstract;
    procedure Excluir; virtual; abstract;
    procedure Carregar(Codigo: Integer); virtual; abstract;
  end;

implementation

end.
